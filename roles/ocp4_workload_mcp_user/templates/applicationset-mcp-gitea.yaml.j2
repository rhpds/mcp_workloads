---
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: mcp-gitea
  namespace: openshift-gitops
spec:
  syncPolicy:
    preserveResourcesOnDeletion: false
  generators:
  - list:
      elements:
{% for n in range(1, ocp4_workload_mcp_user_num_users | int + 1 ) %}
      - user: {{ ocp4_workload_mcp_user_user_base }}{{ n }}
        token: {{ _ocp4_workload_mcp_user_gitea_tokens[n-1] }}
{% endfor %}
  template:
    metadata:
      name: "mcp-gitea-{% raw %}{{ user }}{% endraw %}"
      namespace: openshift-gitops
      finalizers:
      - resources-finalizer.argocd.argoproj.io
    spec:
      destination:
        name: ""
        namespace: "{{ ocp4_workload_mcp_user_gitea_namespace_base }}-{% raw %}{{ user }}{% endraw %}"
        server: https://kubernetes.default.svc
      project: default
      syncPolicy:
        syncOptions:
        - CreateNamespace=true
        automated:
          prune: true
          selfHeal: false
      source:
        repoURL: "{{ ocp4_workload_mcp_user_gitea_internal_url }}/{% raw %}{{ user }}{% endraw %}/{{ ocp4_workload_mcp_user_gitea_repository }}"
        path: {{ ocp4_workload_mcp_user_gitea_repo_path }}
        targetRevision: {{ ocp4_workload_mcp_user_gitops_repo_tag }}
        helm:
          values: |
            fullnameOverride: mcp-gitea
            user: "{% raw %}{{ user }}{% endraw %}"
            namespace: "{{ ocp4_workload_mcp_user_gitea_namespace_base }}-{% raw %}{{ user }}{% endraw %}"
            image: {{ ocp4_workload_mcp_user_gitea_image }}
            giteaConfig:
                url: {{ ocp4_workload_mcp_user_gitea_internal_url }}
                token: "{% raw %}{{ token }}{% endraw %}"
