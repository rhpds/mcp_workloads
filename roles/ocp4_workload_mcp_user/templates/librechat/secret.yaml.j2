---
apiVersion: v1
kind: Secret
metadata:
  name: librechat-credentials-env
  namespace: {{ ocp4_workload_mcp_librechat_namespace }}
type: Opaque
stringData:
  # Required: LibreChat internal encryption and JWT secrets
  # Generate random secrets using: openssl rand -hex 32
  # Or use: https://www.librechat.ai/toolkit/creds_generator
  CREDS_KEY: {{ _ocp4_workload_mcp_librechat_key32 }}
  JWT_SECRET: {{ _ocp4_workload_mcp_librechat_key32 }}
  JWT_REFRESH_SECRET: {{ _ocp4_workload_mcp_librechat_key32 }}

  # Required: Meilisearch master key
  # Generate using: openssl rand -hex 16
  MEILI_MASTER_KEY: {{ _ocp4_workload_mcp_librechat_key16 }}

  # Optional: Custom OpenAI-compatible endpoint API key
  # Reference in librechat.yaml using ${CUSTOM_API_KEY}
  CUSTOM_API_KEY: {{ ocp4_workload_mcp_librechat_litemaas_key }}

  # Default user credentials (used by user-init-job.yaml
  DEFAULT_USER_NAME: "{{ ocp4_workload_mcp_librechat_user }}"
  DEFAULT_USER_EMAIL: "{{ ocp4_workload_mcp_librechat_email }}"
  DEFAULT_USER_PASSWORD: "{{ ocp4_workload_mcp_librechat_password }}"
